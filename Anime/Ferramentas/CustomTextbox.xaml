<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Anime.Ferramentas"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Class="Anime.Ferramentas.CustomTextbox"
             mc:Ignorable="d" Background="White" Cursor="IBeam">
    <DockPanel x:Name="root">
        <Label x:Name="hint" Content="Hint" VerticalAlignment="Top" Foreground="#CA000000" Background="{x:Null}" d:LayoutOverrides="TopPosition, BottomPosition"/>
        <TextBox x:Name="box" TextWrapping="Wrap" VerticalContentAlignment="Center" BorderThickness="0" BorderBrush="{x:Null}" Background="{x:Null}" MaxLines="1"/>
        <PasswordBox x:Name="password" VerticalContentAlignment="Center" BorderThickness="0" BorderBrush="{x:Null}" Background="{x:Null}"/>
    </DockPanel>
</UserControl>