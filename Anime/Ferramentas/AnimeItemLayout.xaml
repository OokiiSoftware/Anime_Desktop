            <TextBox x:Name="eps" TextWrapping="Wrap" Text="eps" Foreground="White" VerticalContentAlignment="Center" Background="{x:Null}" BorderBrush="{x:Null}" BorderThickness="0" IsReadOnly="True" FontSize="16" MaxLines="1" MaxLength="250"/>
            <TextBox x:Name="data" TextWrapping="Wrap" Text="data" Foreground="White" VerticalContentAlignment="Center" Background="{x:Null}" BorderBrush="{x:Null}" BorderThickness="0" IsReadOnly="True" FontSize="16" MaxLines="1" MaxLength="250"/>
            <TextBox x:Name="parentes" TextWrapping="Wrap" Text="parentes" Foreground="White" VerticalContentAlignment="Center" Background="{x:Null}" BorderBrush="{x:Null}" BorderThickness="0" IsReadOnly="True" FontSize="16" MaxLines="1" MaxLength="250"/>
            <TextBox x:Name="sinopse" TextWrapping="Wrap" Text="sinopse" Foreground="White" VerticalContentAlignment="Center" Background="{x:Null}" BorderBrush="{x:Null}" BorderThickness="0" IsReadOnly="True" FontSize="16" MaxLines="1" MaxLength="250"/>
        </WrapPanel>
    </Grid>
</UserControl>
